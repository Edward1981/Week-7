// Creates ages array
let ages = [3, 9, 23, 64, 2, 8, 28, 93];

// subtracts the first element from the last element
let lastElementIndex = ages.length - 1;
let result = ages[lastElementIndex] - ages[0];
console.log("Result:", result);

// Adds a new age to the array and repeat the subtraction
ages.push(35);
lastElementIndex = ages.length - 1;
result = ages[lastElementIndex] - ages[0];
console.log("Result after adding a new age:", result);

//loop to calculate the average age
let sum = 0;
for (let i = 0; i < ages.length; i++) {
  sum += ages[i];
}
let average = sum / ages.length;
console.log("Average age:", average);

// Creates names array
let names = ['Sam', 'Tommy', 'Tim', 'Sally', 'Buck', 'Bob'];

// Calculates the average number of letters per name
let totalLetters = 0;
for (let i = 0; i < names.length; i++) {
  totalLetters += names[i].length;
}
let averageLetters = totalLetters / names.length;
console.log("Average number of letters per name:", averageLetters);

// Concatenates all names together
let concatenatedNames = '';
for (let i = 0; i < names.length; i++) {
  concatenatedNames += names[i] + ' ';
}
console.log("Concatenated names:", concatenatedNames.trim());

// Access the last element
let lastElement = ages[ages.length - 1];
console.log("Last element:", lastElement);

// Access the first element
let firstElement = ages[0];
console.log("First element:", firstElement);

// Creates nameLengths array
let nameLengths = [];
for (let i = 0; i < names.length; i++) {
  nameLengths.push(names[i].length);
}
console.log("Name lengths:", nameLengths);

// Calculates the sum of nameLengths array
let sumOfNameLengths = 0;
for (let i = 0; i < nameLengths.length; i++) {
  sumOfNameLengths += nameLengths[i];
}
console.log("Sum of name lengths:", sumOfNameLengths);

//concatenate a word n times:

function repeatWord(word, n) {
  return word.repeat ;
}

console.log(repeatWord('Hello', 3));

//full name function:

function getFullName(firstName, lastName) {
  return firstName + ' ' + lastName;
}

console.log(getFullName('John', 'Doe'));

//check if the sum is greater than 100:

function isSumGreaterThan100(numbers) {
  let sum = 0;
  for (let i = 0; i < numbers.length; i++) {
    sum += numbers[i];
  }
  return sum > 100;
}

console.log(isSumGreaterThan100([30, 40, 35]));

//calculates the average of an array:

function calculateAverage(numbers) {
  let sum = 0;
  for (let i = 0; i < numbers.length; i++) {
    sum += numbers[i];
  }
  return sum / numbers.length;
}

console.log(calculateAverage([10, 20, 30]));

//compares averages of two arrays:

function compareAverages(array1, array2) {
  return calculateAverage(array1) > calculateAverage(array2);
}

console.log(compareAverages([10, 20, 30], [5, 15, 25]));

//Function  for willBuyDrink:

function willBuyDrink(isHotOutside, moneyInPocket) {
  return isHotOutside && moneyInPocket > 10.50;
}

console.log(willBuyDrink(true, 15));


